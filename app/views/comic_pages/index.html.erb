<h1>Listing comic_pages</h1>
<%= link_to 'New Comic page', new_comic_page_path %>
<br />

<ul class="thumbnails">
  <% @comic_pages.each do |comic_page| %>
    <li class="span3">
      <div class="thumbnail">
        <%= image_tag comic_page.page_image.url(:medium) %>

        <%= link_to 'Show', comic_page %>
        <%= link_to 'Edit', edit_comic_page_path(comic_page) %>
        <%= link_to 'Destroy', comic_page, method: :delete, data: { confirm: 'Are you sure?' } %>

        <p> <%= comic_page.page_number %></p>
      </div>
    </li>
  <% end %>
</ul>
